{
  "rules": {
    "indent": [true, "spaces", 2],
    "quotemark": [true, "single", "jsx-single"],
    "ordered-imports": false,
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "extends": ["tslint:recommended"]
}
